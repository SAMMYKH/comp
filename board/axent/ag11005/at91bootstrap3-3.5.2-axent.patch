+static int sf_cmd_read_fast(unsigned int offset, unsigned int len, void *buf)
+{
+	unsigned char cmd[5];
+
+	cmd[0] = CMD_READ_ARRAY_FAST;
+	cmd[1] = offset >> 16;
+	cmd[2] = offset >> 8;
+	cmd[3] = offset >> 0;
+	cmd[4] = 0x00;
+
+	return sf_cmd_read(cmd, sizeof(cmd), buf, len);
+}
