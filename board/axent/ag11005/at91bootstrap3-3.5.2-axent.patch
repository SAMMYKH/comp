+			| AT91C_DDRC2_CAS_3
+			| AT91C_DDRC2_DLL_RESET_DISABLED);
+
+	ddramc_config->rtr = 0x3b6;
+
+	ddramc_config->t0pr = (AT91C_DDRC2_TRAS_6
+			| AT91C_DDRC2_TRCD_3
+			| AT91C_DDRC2_TWR_2
+			| AT91C_DDRC2_TRC_10
+			| AT91C_DDRC2_TRP_3
+			| AT91C_DDRC2_TRRD_2
+			| AT91C_DDRC2_TWTR_1
+			| AT91C_DDRC2_TMRD_1);
+
+	ddramc_config->t1pr = (AT91C_DDRC2_TXP_2
+			| 18 << 16
+			| 18 << 8
+			| AT91C_DDRC2_TRFC_15 << 0);
+
+	ddramc_config->t2pr = (AT91C_DDRC2_TRTP_6);
